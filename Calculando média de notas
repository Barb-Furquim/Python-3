num_notas = 0                                 # Contador
notas = []                                    # Guarda as notas já digitadas

while (num_notas < 4):
    print('Insira uma NOTA (Bimestre: {})'.format(num_notas + 1))       # Soma + 1 ao contador para definir qual Bimestre a nota se refere

    # Checagem para evitar erros no código
    try:
        nota = float(input())
    except ValueError:
        print('Você inseriu uma letra!')
        continue

    notas += [nota]
    num_notas += 1

media = sum(notas) / 4
print(f'Sua média é {media:.1f}')
